                }
            });
            $("#b7").click(function () {
                var x = document.getElementById("txt").value;
                if (x == "0") {
                    $("#txt").val("7");
                }
                else {
                    $("#txt").val(x + "7")
                }
            });
            $("#b8").click(function () {
                var x = document.getElementById("txt").value;
                if (x == "0") {
